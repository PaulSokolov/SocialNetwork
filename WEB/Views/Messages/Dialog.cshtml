@model IEnumerable<SocialNetwork.Models.MessageModel>
@section BorderMenu
    {
    @{ Html.RenderPartial("BorderMenu");}
}
<div class="col-md-12 col-md-offset-1">
    <div class="row">
        <div class="col-md-10 height">
            <div class="message_content" id="chat">
                @{ Html.RenderPartial("Partial/Messages", Model);}
                @*@foreach (var message in Model)
                    {
                        Html.RenderPartial("Partial/Message", message);
                    }*@
            </div>
            <div class="message_input">
                @using (Html.BeginForm("Send", "Messages", FormMethod.Post, new { id = "sendForm" }))
                {
                    <input type="hidden" id="recipientId" name="recipientId" value="@ViewBag.RecipientId" />
                            <textarea id="message" name="message"></textarea>
                                <button id="send" @*type="submit"*@ class="btn btn-default">Send</button>
                }
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    <script src="~/Scripts/SignalR/counters.js"></script>
    <script src="~/Scripts/SignalR/dialog.js"></script>
}