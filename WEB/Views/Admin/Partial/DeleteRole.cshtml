@model IEnumerable<SocialNetwork.Models.AdminViewModels.RoleModel>

<table id="rolesTable" class="table table-striped table-hover border" style="margin-top:20px;">
    <thead>
        <tr>
            <th>#</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            @*string style = null;
            if (@Model.ElementAt(i).Name == "admin")
            { @style = "danger";
            }
            else if (@Model.ElementAt(i).Name == "moderator")
            {
                @style = "warning";
            }*@
            <tr class="">
                <td>@(i+1)</td>
                <td>@Model.ElementAt(i).Name</td>
                <td>@Ajax.ActionLink("Delete", "DeleteRole", new AjaxOptions { OnBegin = "beforeSend('rolesTable')", OnComplete = "complete('rolesTable')", HttpMethod = "Post" })</td>
            </tr>
        }
    </tbody>
</table> 
