

<h2 align="center">Moderator panel</h2>

<div class="row">
    <div id="moderatorPanel" class="col-md-12 border" style="height:400px">
        <div class="col-md-4">
            <div class="row">
                @using (Ajax.BeginForm("Search", "Moderator", null, new AjaxOptions { UpdateTargetId = "users", OnBegin = "beforeSend('moderatorPanel')", OnComplete = "complete('moderatorPanel')", HttpMethod = "Post" }, new { @class = "navbar-form navbar-left" }))
                {

                    <div class="form-group ">
                        <input id="searchDelete" type="text" name="search" class="form-control" placeholder="Search" source='/Users/AutocompleteSearch'>
                    </div>
                    <button id="searchButton" type="submit" class="btn btn-default">Search</button>
                }
            </div>
            <div id="users" class="row" style="overflow:auto; height:300px;padding:15px;padding-top:0px">

            </div>
        </div>
        <div id="messages" class="col-md-8">
            <div id="result">
            </div>
        </div>

    </div>
</div>
