@model SocialNetwork.Models.UserSearchModel

<div class="row">
    <div class="dialog">
        <div class="media">
            <div class="media-left media-top">
                <a href="@Url.Action("User","Home",new{ id = Model.PublicId})" style="position: relative;">
                    <img class="media-object dialog_image_user" src="@Model.Avatar" alt="...">
                </a>
            </div>
            <div class="media-body">
                @if (Model.IsFriend)
                {
                    <div id="@($"delete_{Model.PublicId}")" class="btn btn-danger" style="float: right;top: 0px" onclick="FriendRequest(@Model.PublicId,'Delete','delete','result')">Delete</div>
                }
                else if (Model.IsFollower)
                {
                    <div id="@($"follower_{Model.PublicId}")" class="btn btn-default" style="float: right;top: 0px " onclick="FriendRequest(@Model.PublicId,'Confirm','follower','result')">Add to friends</div>
                }
                else if (Model.IsFollowed)
                {
                    <div id="@($"followed_{Model.PublicId}")" class="btn btn-danger" style="float: right;top: 0px " onclick="FriendRequest(@Model.PublicId,'Unsubscribe','followed','result')">Unsubscribe</div>
                }
                else if (ViewBag.MyPublicId == Model.PublicId) { }
                else
                {
                    <div id="@($"friend_{Model.PublicId}")" class="btn btn-default" style="float: right;" onclick="FriendRequest(@Model.PublicId,'Add','friend','result')">Add Friend</div>
                }
                <a href="@Url.Action("Profile", "Home", new {id = Model.PublicId})">
                    <h5 class="media-heading">@($"{Model.Name} {Model.Surname}")</h5>
                    <span>@Model.Address</span>
                </a>

            </div>
        </div>
    </div>
</div>